#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(openssl openssl-dev)
pkgver=1.1.1q
pkgrel=1
pkgdesc='a toolkit for the TLS and SSL protocols'
arch=(x86_64)
url='https://www.openssl.org'
license=(BSD)
groups=()
depends=()
makedepends=(perl zlib-dev)
options=()
changelog=ChangeLog

source=(
    "https://www.openssl.org/source/openssl-${pkgver}.tar.gz"
)
sha256sums=(
    d7939ce614029cdff0b6c20f0e2e5703158a489a72b2507b8bd51bf8c8fd10ca
)


build() {
    cd_unpacked_src
    sed -i -e "/stdio.h/s@\$@\n#include <string.h>@" test/v3ext.c
    ./Configure \
        --prefix=/usr \
        --openssldir=/etc/ssl \
        linux-x86_64-clang
    make
}

package_openssl() {
    depends=(
        "ld-musl-$(arch).so.1"
        libc.so
    )
    provides=(
        libcrypto.so.1.1
        libssl.so.1.1
    )
    pkgfiles=(
        etc/ssl/*.cnf
        usr/bin/openssl
        usr/lib/engines-1.1
        usr/lib/lib*.so.*
        usr/share/man/man1
        usr/share/man/man5
        usr/share/man/man7
    )
    std_package
}

package_openssl-dev() {
    depends=(
        "openssl=${pkgver}"
    )
    pkgfiles=(
        usr/include
        usr/lib/lib*.a
        usr/lib/lib*.so
        usr/lib/pkgconfig
        usr/share/man/man3
    )
    std_split_package
}
