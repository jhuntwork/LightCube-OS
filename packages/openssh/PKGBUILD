#!/bin/bash
# shellcheck disable=SC2034,SC2154,SC2068

pkgname=(openssh-client)
_vermajor=9
_verminor=0
pkgver=${_vermajor}.${_verminor}p1
pkgrel=1
pkgdesc='the premier connectivity tool for remote login with the SSH protocol'
arch=(x86_64)
url='https://openssh.com'
license=(BSD)
groups=()
depends=()
makedepends=(
    openssl-dev
    utmps-dev
    zlib-ng-dev
)
options=()
changelog=ChangeLog

source=(
    "https://ftp4.usa.openbsd.org/pub/OpenBSD/OpenSSH/portable/openssh-${pkgver}.tar.gz"
)
sha256sums=(
    03974302161e9ecce32153cfa10012f1e65c8f3750f573a73ab1befd5972a28a
)


build() {
    cd_unpacked_src
    export LDFLAGS='--static'
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --disable-utmp \
        --disable-utmpx \
        --disable-wtmp \
        --disable-wtmpx \
        --disable-lastlog \
        --with-mantype=man
    make
}

package_openssh-client() {
    depends=(
    )
    pkgfiles=(
        usr/bin/ssh
        usr/bin/ssh-keyscan
        usr/bin/ssh-keygen
        usr/bin/scp
        usr/bin/sftp
        usr/bin/ssh
        usr/bin/ssh-agent
        usr/bin/ssh-add
        etc/ssh_config
        usr/share/man/man1
    )
    std_package
}
